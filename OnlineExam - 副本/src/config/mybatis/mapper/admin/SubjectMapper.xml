<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.admin.SubjectDao">
	<!-- 学科专业插入操作 -->
	<insert id="add" parameterType="com.ischoolbar.programmer.entity.admin.Subject">
		insert into subject(id,name,remark) values(null,#{name},#{remark})
	</insert>
	<!-- 学科专业更新操作 -->
	<update id="edit" parameterType="com.ischoolbar.programmer.entity.admin.Subject">
		update subject set name = #{name},remark = #{remark} where id = #{id}
	</update>
	<!-- 学科专业信息精确查询 -->
	<select id="findById" parameterType="Long" resultType="com.ischoolbar.programmer.entity.admin.Subject">
		select * from subject where id = #{value}
	</select>
	<!-- 学科专业信息搜索查询 -->
	<select id="findList" parameterType="Map" resultType="com.ischoolbar.programmer.entity.admin.Subject">
		select * from subject 
		<if test="name != null">
			where name like '%${name}%' 
		</if>
		<if test="offset != null and pageSize != null">
			limit #{offset},#{pageSize}
		</if>
	</select>
	<!-- 模糊搜索总条数 -->
	<select id="getTotal" parameterType="Map" resultType="Integer">
		select count(*) from subject 
		<if test="name != null">
			where name like '%${name}%' 
		</if>
	</select>
	<!-- 删除学科专业信息 -->
	<delete id="delete" parameterType="Long">
		delete from subject where id =${value}
	</delete>
</mapper>